{# base.html.twig #}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
         <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
        <link href="https://fonts.googleapis.com/css?family=Bangers|Comic+Neue|Indie+Flower&display=swap" rel="stylesheet">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body style="box-sizing:border-box; font-family: 'Comic Neue', cursive;">

      {# -------------------------------------------------------------  N A V    B A R  ----------------------------------------------------------------------------------------- #}

        <nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="margin-bottom:100px;">
            <a class="navbar-brand" href="#" style="font-family: 'Bangers', cursive; font-size:1.5rem; letter-spacing: 1px;"> ** MY MOVIES **</a>
            <button class="navbar-toggler" type ="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    {# <li class="nav-item active">
                        <a class="nav-link" href="{{ path('get_lists') }}">Home <span class="sr-only">(current)</span></a>
                    </li> #}
                    {% if is_granted('ROLE_ADMIN') %}
                        
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('admin') }}">Admin</a>
                        </li>
                    
                    {% endif %}
                    
                    {% if app.user == false %}
                        
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('register') }}">Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('login') }}">Login</a>
                        </li>

            {% endif %}
            
            <li class="nav-item">
                <a class="nav-link" href="{{ path('get_lists') }}">My Lists</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('search') }}">Search Films</a>
            </li> 
            <li class="nav-item">
                <a class="nav-link" href="{{ path('get_friends') }}">My Friends</a>
            </li>

                    {% if app.user != null %}

                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_logout') }}">Log out</a>
                        </li>

                    {% endif %}
                
                </ul>
            </div>
        </nav>


        {# ------------------------------------------------------------- P A G E ----------------------------------------------------------------------------------------- #}
        <style>
            .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
            .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        </style>

    


        {# ------------------------------------------------------------- H 1 ----------------------------------------------------------------------------------------- #}
        <div class="h1 example-wrapper container" style="font-family: 'Bangers', cursive; letter-spacing: 2px;">    
            {% block h1 %}{% endblock %}
        </div>
            <hr>
    
        {# ------------------------------------------------------------- B O D Y ----------------------------------------------------------------------------------------- #}
       
       <div style="background-image: url('templates/audience.jpg');">
            <section class="body example-wrapper container" style="box-sizing:border-box">
            {% block body %}{% endblock %}
            </section>

            <section class="body2" style="width:90%; margin:auto" style="box-sizing:border-box">
            {% block body2 %}{% endblock %}
            </section>
        </div>
        {# ------------------------------------------------------------- J S  ----------------------------------------------------------------------------------------- #}
        {% block javascripts %}{% endblock %}

    </body>
</html>
